{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": ["es2018", "dom"],
        "paths": {
            "@models": ["app/models/index"],
            "@models/*": ["app/models/*"],
            "@api-bindings": ["app/api-bindings/index"],
            "@core/*": ["app/core/*"],
            "@store": ["app/store/index"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
