{
    "extends": "angular-tslint-rules",
    "rules": {
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "directive-selector": [true, "attribute", "sup", "camelCase"],
        "component-selector": [true, "element", "sup", "kebab-case"],
        "newline-per-chained-call": false,
        "template-i18n": false,
        "arrow-parens": true
    },
    "rulesDirectory": ["codelyzer"]
}
